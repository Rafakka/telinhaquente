FROM eclipse-temurin:17-jdk AS BUILDER
WORKDIR /app
COPY mvnw .
COPY .mvn .mvn
COPY pom.xml .

RUN ./mvnw dependency:go-offline

COPY src src

RUN ./mvnw clean package -DskipTests

FROM eclipse-temurin:17-jdk
WORKDIR /app
COPY --from=builder /app/target/telinhaquente-0.0.1-SNAPSHOT.jar app.jar

ENTRYPOINT ["java","-Dserver.port=${SERVER_PORT:-8091}","-jar", "app.jar"]
